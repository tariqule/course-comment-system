<!DOCTYPE html>
<html>

<head>
    <!-- Use the 'title' property to render a page title  -->
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" type="text/css" href="css/addstyle.css" />

</head>

<body>
    <!-- Load the static image file  -->
    <img src="img/logo.png" alt="Logo">

    <!-- PUT implementation with parameters  -->
    <form action="/students/<%= user._id %>?_method=PUT" method="POST">
        <!-- Use the 'title' property to render a title element  -->
        <h2>
            <%= title %>
        </h2>

        <div class="container">
            <label>
                <b>First Name:</b>
            </label>
            <input type="text" class="fields" name="firstName" value="<%= user.firstName  %>" />
        </div>
        <div class="container">
            <label>
                <b>LastName:</b>
            </label>
            <input type="text" class="fields" name="lastName" value="<%= user.lastName %>" />
        </div>
        <div class="container">
            <label>
                <b>email:</b>
            </label>
            <input type="text" class="fields" name="email" value="<%= user.email %>" />
        </div>

        <div class="container">
            <label>
                <b>Password:</b>
            </label>
            <input type="text" class="fields" name="password" value="<%= user.password %>" />
        </div>
        <div class="container">
            <label>
                <b>User name:</b>
            </label>

            <input type="text" class="fields" name="username" value="<%= user.username>" />
        </div>

        <div class="container">
            <label>
                <b>Favorite Subject:</b>
            </label>
            <input type="text" class="fields" name="favSubject" value="<%= user.favSubject %>" />
        </div>

        <div class="container">
            <label>
                <b>Major:</b>
            </label>

            <input type="text" class="fields" name="role" value="<%= user.major %>" />
        </div>

        <div class="container">
            <button type="submit" class="form-field-no-caption">Update user</button>
        </div>

    </form>




</body>

</html>
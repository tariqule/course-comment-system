        <thead>
          <tr>
            <th scope="col">CourseCode</th>
            <th scope="col">courseName</th>
    
            <th scope="col">comment</th>
          </tr>
        </thead>
        <tbody>

            <% comments.map((comment, index) =>{%>

                <tr>
                    <th scope="row">   <%=comment.courseCode %></th>
                    <td> <%=comment.courseName %></td>
